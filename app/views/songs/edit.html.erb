<div>
    <ul>
        <% form_for @song do |f| %>
            <%= f.label :title %>
            <li><%= f.text_area :title %></li>

            <%= f.label :released %>
            <li><%= f.text_area :released %></li>

            <%= f.label :release_year %>
            <li><%= f.text_area :release_year %></li>

            <%= f.label :artist_name %>
            <li><%= f.text_area :artist_name %></li>

            <%= f.label :genre %>
            <li><%= f.text_area :genre %></li>

            <%= f.submit %>
        <% end %>
    </ul>
</div>